@model TBEntity.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Navber.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Update Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
</head>
<body>

    <div class="container" style="margin-top:80px">
        <h3>Update Profile</h3>
        <form method="post" action="/User/Edit">
            <input id="id" name="id" type="hidden" value="@Html.DisplayFor(model => model.Id)" />
            <div class="form-group">
                <label for="name">First Name : </label>
                <input type="text" class="form-control" id="fname" name="fname" value="@Html.DisplayFor(model => model.FirstName)">
            </div>
            <div class="form-group">
                <label for="name">Last Name : </label>
                <input type="text" class="form-control" id="lname" name="lname" value="@Html.DisplayFor(model => model.LastName)">
            </div>
            <div class="form-group">
                <label for="division">Your Home Division:</label>
                <select class="form-control" id="division" name="division">
                    <option>@Html.DisplayFor(model => model.Division)</option>
                    <option>Khulna</option>
                    <option>Barishal</option>
                    <option>Rajsahi</option>
                    <option>Chittagong</option>
                    <option>Sylhet</option>
                    <option>Rangpur</option>
                </select>
            </div>
            <div class="form-group">
                <label for="phone">Phone : </label>
                <input type="text" class="form-control" id="phone" name="phone" value="@Html.DisplayFor(model => model.Phone)">
            </div>
            <div class="form-group">
                <label for="address">Full Address : </label>
                <input type="text" class="form-control" id="address" name="address" value="@Html.DisplayFor(model => model.Address)">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </br>
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Profile", "User")'">Back</button>
    </div>

</body>
</html>

