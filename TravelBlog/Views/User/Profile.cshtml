@model TBEntity.User

@{
    Layout = "~/Views/Shared/_Navber.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body style="height:100%">
        <div class="container" style="height:inherit;width:inherit">
            <div class="jumbotron" style="margin-top:50px">
                <h2 style="text-align:center;margin-bottom:12px">Your Profile</h2>
                <table class="table table-dark table-hover">
                    <tbody>
                        <tr>
                            <td>Full Name :- </td>
                            <td> <h5 style="text-align:center">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h5></td>
                        </tr>
                        <tr>
                            <td>Email :- </td>
                            <td><h5 style="text-align:center">@Html.DisplayFor(model => model.Email)</h5></td>
                        </tr>
                        <tr>
                            <td>Phone :-</td>
                            <td><h5 style="text-align:center">@Html.DisplayFor(model => model.Phone)</h5></td>
                        </tr>
                        <tr>
                            <td>Division :-</td>
                            <td><h5 style="text-align:center">@Html.DisplayFor(model => model.Division)</h5></td>
                        </tr>
                        <tr>
                            <td>Address :-</td>
                            <td><h5 style="text-align:center">@Html.DisplayFor(model => model.Address)</h5></td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" class="btn btn-outline-dark btn-block" onclick="location.href='@Url.Action("Edit","User")'">Edit Profile</button>
                <button type="button" class="btn btn-outline-secondary btn-block" onclick="location.href='@Url.Action("ChangePassword","User")'">Change Password</button>
            </div>
        </div>
</body>
</html>
