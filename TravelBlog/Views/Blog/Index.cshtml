@{
    Layout = "~/Views/Shared/_Navber.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <div class="container" style="margin-top:65px">
        <h3>Regester</h3>
        <form method="post" action="/Blog/SaveBlog">
            <div class="form-group">
                <label for="title">Title : </label>
                <input type="text" class="form-control" id="title" placeholder="Enter Title" name="name">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" id="address" placeholder="Enter Full Address" name="email">
            </div>
            <div class="form-group">
                <label for="blog">Your Blog : </label>
                <textarea rows="10" cols="50" class="form-control" id="blog" placeholder="Write Blog" name="blog"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>