@model TBEntity.User
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Welcome</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
</head>
<body style="height:1500px">
    @RenderBody()
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top" style="position: fixed;top: 0;width: 100%;">
        <ul class="navbar-nav">
            <li class="nav-item" style="margin-right:15px;margin-left:8px">
                <a class="nav-link" href="@Url.Action("Index", "User",Model)">Home</a>
            </li>
            <li class="nav-item" style="margin-right:15px">
                <a class="nav-link" href="@Url.Action("Profile", "User")">Profile</a>
            </li>
            <li class="nav-item" style="margin-right:15px">
                <a class="nav-link" href="@Url.Action("Settings", "User")">Settings</a>
            </li>

            <li class="nav-item" style="margin-right:15px">
                <a class="nav-link" href="@Url.Action("UBlog", "User")">Blog</a>
            </li>
            <li class="nav-item" style="margin-right:15px">
                <a class="nav-link" href="#">About Us</a>
            </li>
            <li class="nav-item" style="margin-right:15px">
                <a class="nav-link" href="@Url.Action("SignOut", "User")">Sign Out</a>
            </li>
            <form class="form-inline" style="margin-left:380px" action="/Blog/SrcBlog" method="post">
                <input class="form-control mr-sm-2" type="text" placeholder="Search Blogs " id="SResult" style="width:225px" name="SResult">
                <button class="btn btn-success" type="submit">Search</button>
            </form>
        </ul>
    </nav>

</body>
</html>
