@model TBEntity.Admin

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Admin_Navbar.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
</head>
<body>

    <div class="container" style="margin-top:80px">
        <h3>Change Password</h3>
        <form method="post" action="/Admin/ChangePassword">
            <input id="id" name="id" type="hidden" value="@Html.DisplayFor(model => model.Id)" />
            <div class="form-group">
                <label for="name">Current Password : </label>
                <input type="password" class="form-control" id="cpass" name="cpass">
            </div>
            <div class="form-group">
                <label for="email">New Password : </label>
                <input type="password" class="form-control" id="npass" name="npass">
            </div>
            <div class="form-group">
                <label for="phone">Confirm New Password : </label>
                <input type="password" class="form-control" id="cnpass" name="cnpass">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </br>
        <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Profile", "Admin")'">Back</button>
    </div>

</body>
</html>

